{
  "appId": "com.suna.desktop",
  "productName": "Suna Desktop",
  "directories": {
    "output": "dist"
  },
  "files": [
    "out/**/*",
    "electron/main.js",
    "node_modules/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/favicon.ico",
    "category": "public.app-category.productivity"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico"
  }
} 